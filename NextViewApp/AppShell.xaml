<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:NextViewApp.Views"
       x:Class="NextViewApp.AppShell">

    <!-- Botões no topo -->
    <TabBar>
        <ShellContent Title="Buscar" Icon="buscar_icon.png" ContentTemplate="{DataTemplate views:BuscarPage}" />
        <ShellContent Title="Vídeos" Icon="video_icon.png" ContentTemplate="{DataTemplate views:VideosPage}" />
        <ShellContent Title="Músicas" Icon="musicas_icon.png" ContentTemplate="{DataTemplate views:MusicasPage}" />
        <ShellContent Title="Podcast" Icon="podcast_icon.png" ContentTemplate="{DataTemplate views:PodcastPage}" />
    </TabBar>

    <!-- Botões na parte inferior -->
    <TabBar>
        <ShellContent Title="Vídeos" Icon="video_icon.png" Route="VideosBottom" ContentTemplate="{DataTemplate views:VideosPage}" />
        <ShellContent Title="FastViews" Icon="fastviews_icon.png" Route="FastViewsBottom" ContentTemplate="{DataTemplate views:FastViewsPage}" />
        <ShellContent Title="Playlists" Icon="playlists_icon.png" Route="PlaylistsBottom" ContentTemplate="{DataTemplate views:PlaylistsPage}" />
        <ShellContent Title="Perfil" Icon="perfil_icon.png" Route="PerfilBottom" ContentTemplate="{DataTemplate views:PerfilPage}" />
    </TabBar>

</Shell>
